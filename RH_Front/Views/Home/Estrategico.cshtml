@model IEnumerable<RH_Application.ViewModels.RelatorioEstrategicoViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Estrategico";
}

<h2>Relatório Estratégico</h2>

<div class="row">
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                <th>@Html.DisplayNameFor(model => model.CargaHoraria)</th>
                <th>@Html.DisplayNameFor(model => model.Assiduidade)</th>
                <th>@Html.DisplayNameFor(model => model.VolumeFinanceiro)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                    <td>@Html.DisplayFor(modelItem => item.CargaHoraria)</td>
                    <td>@Html.DisplayFor(modelItem => item.Assiduidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.VolumeFinanceiro)</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h2>Gráfico relatório Estratégico</h2>
        <img src="@Url.Action("ChartTatico")" alt="SimpleChart" />
    </div>
</div>