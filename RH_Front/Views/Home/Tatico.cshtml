@model IEnumerable<RH_Application.ViewModels.RelatorioTaticoViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Tatico";
}

<h2>Relatório Tático</h2>

<div class="row">
    <div class="col-md-7">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                <th>@Html.DisplayNameFor(model => model.Funcionario)</th>
                <th>@Html.DisplayNameFor(model => model.VolumeFinanceiro)</th>
                <th>@Html.DisplayNameFor(model => model.ProdutoPromocao)</th>
                <th>@Html.DisplayNameFor(model => model.QuantidadeVendida)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Funcionario)</td>
                    <td>@Html.DisplayFor(modelItem => item.VolumeFinanceiro)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProdutoPromocao)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuantidadeVendida)</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-5">
        <h2>Gráfico relatório Tático</h2>
        <img src="@Url.Action("ChartTatico")" alt="SimpleChart" />
    </div>
</div>